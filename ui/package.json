{
  "name": "@auth0/docs-ui",
  "version": "1.0.0",
  "description": "Custom UI components for Auth0 Documentation",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "format": "prettier --write .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "version:patch": "npm version patch && echo 'Updated to patch version'",
    "version:minor": "npm version minor && echo 'Updated to minor version'",
    "version:major": "npm version major && echo 'Updated to major version'",
    "version:current": "node scripts/update-main-version.js --current",
    "version:update-main": "node scripts/update-main-version.js",
    "release": "npm run build && npm run version:update-main && echo 'Ready for deployment!'"
  },
  "dependencies": {
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/blocks": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^22.18.6",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "postcss-prefix-selector": "^2.1.1",
    "prettier": "^3.6.2",
    "storybook": "^8.0.0",
    "tailwindcss": "^4.1.13",
    "vite": "^5.2.0"
  }
}
